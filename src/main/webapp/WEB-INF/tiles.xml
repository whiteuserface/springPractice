<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
	
	<definition name="layout.common" template="/WEB-INF/views/inc/layout.jsp">
    <put-attribute name="title" value="Tiles tutorial homepage" />
    <put-attribute name="header" value="/WEB-INF/views/inc/header.jsp" />
    <put-attribute name="body" value="/WEB-INF/views/{1}.jsp" />
    <put-attribute name="footer" value="/WEB-INF/views/inc/footer.jsp" />
  </definition>	
	
	<definition name="home.*" template="/WEB-INF/inc/layout.jsp">
    <put-attribute name="title" value="Tiles tutorial homepage" />
    <put-attribute name="header" value="/WEB-INF/views/inc/header.jsp" />
    <put-attribute name="body" value="/WEB-INF/views/{1}.jsp" />
    <put-attribute name="footer" value="/WEB-INF/views/inc/footer.jsp" />
  </definition>	
	
  <definition name="customer.notice.*" template="/WEB-INF/views/customer/inc/layout.jsp">
    <put-attribute name="title" value="Tiles tutorial homepage" />
    <put-attribute name="header" value="/WEB-INF/views/inc/header.jsp" />
    <put-attribute name="aside" value="/WEB-INF/views/customer/inc/aside.jsp" />
    <put-attribute name="visual" value="/WEB-INF/views/customer/inc/visual.jsp" />
    <put-attribute name="body" value="/WEB-INF/views/customer/notice/{1}.jsp" />
    <put-attribute name="footer" value="/WEB-INF/views/inc/footer.jsp" />
  </definition>
  
  <definition name="admin.*.*.*" template="/WEB-INF/views/admin/inc/layout.jsp">
    <put-attribute name="title" value="Tiles tutorial homepage" />
    <put-attribute name="header" value="/WEB-INF/views/inc/header.jsp" />
    <put-attribute name="aside" value="/WEB-INF/views/admin/inc/aside.jsp" />
    <put-attribute name="visual" value="/WEB-INF/views/admin/inc/visual.jsp" />
    <put-attribute name="body" value="/WEB-INF/views/admin/{1}/{2}/{3}.jsp" />
    <put-attribute name="footer" value="/WEB-INF/views/inc/footer.jsp" />
  </definition>
</tiles-definitions>